html
  head
    title NYCDA Bloging app
    link(rel='stylesheet', href='css/blog.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
  body
    nav.navbar.navbar-inverse
      .container-fluid
        .navbar-header
          a.navbar-brand(href='#') NYCDA Blog
        ul.nav.navbar-nav
          li.active
             a(href='http://localhost:3000/home') Dashboard
          li
            a(href='http://localhost:3000/profile') Your wall
          li
            //- a(href='http://localhost:3000/messages') Add new post
        button.btn.btn-danger.navbar-btn.pull-right
          a(href='http://localhost:3000/logout') logout 
    .container
      .row
        .col-3.pull-right
          .sidebar-nav
            .well(style='width:300px; padding: 8px 0;')
              ul.nav.nav-list
                li
                  h3   Blog Activities
                li.active
                  a(href='http://localhost:3000/home')
                    i.fa.fa-home.fa(aria-hidden='true')
                    |  Dashboard
                li
                  a(href='http://localhost:3000/profile')
                    i.fa.fa-user.fa(aria-hidden='true')
                    |  Your wall
                li
                  //- a(href='http://localhost:3000/messages')
                    i.fa.fa-edit.fa(aria-hidden='true')
                    |  write new post.

        .col-sm-9
          h3 You got something  say ?  Blog it now !!
          form( action="/message"  role='form' method="POST" )
            .form-group
              label(for='exampleInputEmail1') blog tittle
              input#exampleInputEmail1.form-control(type='text', name='postopic', placeholder='Post  Tittle')
              small#emailHelp.form-text.text-muted
            .form-group
              label(for='exampleTextarea') Blog Message 
              textarea#exampleTextarea.form-control( type='text', name='postmessage', placeholder='Write  blog here' rows='10')
            button.btn.btn-primary(type='submit' value="Post") Post
          br
          br

      each userblog in userblogs
        .col-sm-9
          strong #{userblog.person.firstname} #{userblog.person.lastname}'s
          br
          |blogpost
          br
          br
          strong Topic
          | #{userblog.topic}
          br
          br
          P
            | #{userblog.postmessage}
          br
          P
            | 
          each postcomment  in userblog.postcomments
                strong #{postcomment.person.firstname} #{postcomment.person.lastname}
                p  #{postcomment.postcomment}
                br
